generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PG_DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  color     String   @default("#2E6B3A")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  rentals   Rental[]
  tasks     Task[]

  @@map("users")
}

model Rental {
  id        String   @id @default(cuid())
  date      DateTime @db.Date
  startHour Int      @default(8)
  endHour   Int      @default(20)
  notes     String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([date, userId])
  @@index([date])
  @@map("rentals")
}

enum TaskStatus {
  PENDIENTE
  COMPLETADA
}

model Task {
  id          String      @id @default(cuid())
  title       String
  description String?
  status      TaskStatus  @default(PENDIENTE)
  createdById String
  createdBy   User        @relation(fields: [createdById], references: [id], onDelete: Cascade)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([status])
  @@map("tasks")
}
